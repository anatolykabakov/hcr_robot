<launch>
  <arg name="ns" default="tb3_0"/>

  <group ns="$(arg robot_ns)">
  <node name="slam_gmapping" pkg="gmapping" type="slam_gmapping">   
     <param name="output_frame_id" value="$(arg ns)/base_link"/>
     <remap from="/scan" to="$(arg ns)/scan"/> 
     <param name="map_frame" value="$(arg ns)/map" />
     <param name="_odom_frame" value="$(arg ns)/odom" />
     <param name="_base_frame" value="$(arg ns)/base_link" />
     <param name="_inverted_laser" value="false" />
 </node>
 </group>



</launch>
