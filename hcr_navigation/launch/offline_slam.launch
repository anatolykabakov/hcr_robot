<launch>

  <node name="hcr" pkg="hcr_node" type="hcr.py" output="screen">
      <param name="port" value="/dev/ttyACM0" />
  </node>

  <node name="rplidarNode"          pkg="rplidar_ros"  type="rplidarNode" output="screen">
	  <param name="serial_port"         type="string" value="/dev/ttyUSB0"/>
	  <param name="serial_baudrate"     type="int"    value="115200"/><!--A1/A2 -->
	  <!--param name="serial_baudrate"     type="int"    value="256000"--><!--A3 -->
	  <param name="frame_id"            type="string" value="laser_frame"/>
	  <param name="inverted"            type="bool"   value="false"/>
	  <param name="angle_compensate"    type="bool"   value="true"/>
  </node>

  <node pkg="tf" type="static_transform_publisher" name="laser_broadcaster" 
    args="0 0 0.2 3.14 0 0 base_link laser_frame 100" />

  <!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find hcr_navigation)/maps/map.yaml"/>

  <!--- Run AMCL -->
  <node pkg="amcl" type="amcl" name="amcl" >
    <remap from="scan" to="scan" />
  </node>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find hcr_navigation)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find hcr_navigation)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find hcr_navigation)/params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find hcr_navigation)/params/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find hcr_navigation)/params/trajectory_planner.yaml" command="load" />
  </node>
</launch>

